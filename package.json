{
  "name": "azure-devops-mcp-pat",
  "version": "1.0.0",
  "description": "Azure DevOps MCP server with PAT authentication and HTTP API for web deployment",
  "license": "MIT",
  "author": "ennuiii",
  "homepage": "https://github.com/ennuiii/DevOpsMcpPAT",
  "bugs": "https://github.com/ennuiii/DevOpsMcpPAT/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/ennuiii/DevOpsMcpPAT.git"
  },
  "type": "module",
  "main": "dist/server-web.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "render.yaml",
    "Dockerfile"
  ],
  "scripts": {
    "preinstall": "npm config set registry https://registry.npmjs.org/",
    "prebuild": "node -p \"'export const packageVersion = ' + JSON.stringify(require('./package.json').version) + ';\\n'\" > src/version.ts",
    "build": "tsc",
    "start": "node dist/server-web.js",
    "dev": "npm run build && npm start",
    "watch": "tsc --watch",
    "clean": "shx rm -rf dist",
    "test": "jest",
    "eslint": "eslint",
    "eslint-fix": "eslint --fix",
    "format": "prettier --write .",
    "format-check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.17.0",
    "azure-devops-extension-api": "^4.252.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-node-api": "^15.1.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "typescript": "^5.8.3",
    "yargs": "^18.0.0",
    "zod": "^3.25.63",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^22",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-header": "^3.1.1",
    "jest": "^30.0.2",
    "jest-extended": "^6.0.0",
    "prettier": "3.6.2",
    "shx": "^0.4.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  }
}